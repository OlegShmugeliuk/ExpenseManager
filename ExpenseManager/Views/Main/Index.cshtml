<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Manager</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

    <!-- Your content here -->

    

<canvas id="myPieChart" width="400" height="400"></canvas>
<script>
    document.addEventListener("DOMContentLoaded", function () {
    var infoBodyData = @Html.Raw(Json.Serialize(Model));
    
    console.log(infoBodyData);
    
    // Initialize groupedData before using it
    var groupedData = {};

    infoBodyData.forEach(function (item) {
        if (!groupedData[item.expenditureType]) {
            groupedData[item.expenditureType] = 0;
        }
        groupedData[item.expenditureType] += item.totalPrice;
    });

    var labels = Object.keys(groupedData);
    var data = Object.values(groupedData);

    console.log(data)

    var ctx = document.getElementById('myPieChart').getContext('2d');
    var myPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: labels,
            datasets: [{
                data: data,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.7)',
                    'rgba(54, 162, 235, 0.7)',
                    'rgba(255, 206, 86, 0.7)',
                    'rgba(75, 192, 192, 0.7)',
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: false,
            maintainAspectRatio: false,
        }
    });
});
</script>

