@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="/RegisterStyle.css"/>

<div class="registration-position">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <p>Create a new account</p>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-6">
                    <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" placeholder="first name"/>
                <label asp-for="Input.FirstName"></label>
                
            </div>

                </div>

                <div class="col-6">
                    <div class="form-floating">
    <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" placeholder="last name"/>
    <label asp-for="Input.LastName"></label>
    
</div>
                </div>

            </div>

            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span class = "erroRegisterPosition EmailPosition" asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span class = "erroRegisterPosition PasswordPosition" asp-validation-for="Input.Password"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span  asp-validation-for="Input.ConfirmPassword" class="text-danger erroRegisterPosition confirmPasswordPosition"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
   
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 
